<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/incidentView"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/customborder"
        tools:visibility="visible">


    <TextView
            android:id="@+id/positionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:editable="false"
            android:text="Plats:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp" android:layout_marginTop="2dp"/>
    <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:editable="false"
            android:text="Tid:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/positionLabel"
            android:layout_marginLeft="44dp" android:layout_marginTop="10dp" android:layout_marginStart="44dp"/>

    <TextView
            android:id="@+id/countLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:editable="false"
            android:text="Antal:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeLabel"
            android:layout_marginLeft="44dp" android:layout_marginTop="10dp" android:layout_marginStart="44dp"/>

    <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:contentDescription="PLATS"
            android:editable="false"
            android:text="PLATS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp" android:layout_marginEnd="144dp" android:layout_marginRight="144dp"/>

    <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:editable="false"
            android:text="HH:MM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationText"
            android:layout_marginTop="10dp" android:layout_marginEnd="144dp" android:layout_marginRight="140dp"/>

    <TextView
            android:id="@+id/countText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:editable="false"
            android:text="X st"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeText"
            android:layout_marginTop="10dp" android:layout_marginEnd="144dp" android:layout_marginRight="160dp"/>

    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/like"
            android:id="@+id/iw_like"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="76dp" android:layout_marginRight="76dp"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/timeText"
            android:onClick="onClick" app:layout_constraintHorizontal_bias="0.348" android:layout_marginBottom="2dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@drawable/verified"
            android:id="@+id/iw_verified"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.64" app:layout_constraintStart_toEndOf="@+id/timeText"
            android:onClick="onClick" app:layout_constraintHorizontal_bias="0.987" android:layout_marginBottom="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>